{
	"compilerOptions": {
	  "outDir": "./js",
	  "noImplicitAny": false,
	  "module": "es6",
	  "target": "es2015",
	  "jsx": "react",
	  "allowJs": true,
	  "sourceMap": true,
	  "moduleResolution": "node"
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"js/**/*"
	]
  }